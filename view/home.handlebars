	<meta charset="utf-8">
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
   
	<script>
		var socket = io("http://localhost:3000");

		socket.on("server-send",function(data){
			//$("#noidung").append(data + "<br>");
			$("#noidung").append(data + "<br>");

		});


			socket.on("id",function(data){
			//$("#noidung").append(data + "<br>");
			$("#noidung").append(data + "gui : ");
		});





		$(document).ready(function(){
			$("#son").click(function(){
		
				socket.emit("client-send","dinh quoc son \n");


			});
			$("#send").click(function(){
				
				//$("#noidung").append($("#string").val() + "<br>");
				socket.emit("client-send",$("#string").val() + "<br>");
				document.getElementById("string").value="";

			});

			$("#string").keypress(function(e){	
				if(e.keyCode == 13){	

				
				 
				 
				socket.emit("client-send",$("#string").val() + "<br>");
				document.getElementById("string").value="";
					// socket.emit("client-send",$("#string").val() + "<br>"); }
			};
		});
			});
	</script>
</head>
<body>
	<input type="text" id="string">
	<input type="reset" id="send" value="GUI"   />
	
	<div id="son" >gui</div>
	<div id="noidung"></div>
	

</body>
